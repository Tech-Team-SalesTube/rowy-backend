{
  "name": "rowy-run",
  "env": {
    "ROWY_SECRET": {
      "generator": "secret"
    }
  },
  "options": {
    "allow-unauthenticated": true,
    "memory": "2Gi"
  },

  "hooks": {
    "prebuild": {
      "commands": [
        "echo $PWD",
        "$(sudo curl -fsSLO https://raw.githubusercontent.com/warrensbox/terraform-switcher/release/install.sh)",
        "sudo chmod +x ./install.sh",
        "sudo ./install.sh",

        "tfswitch -u -b /bin",
        "sudo ln -sf $HOME/bin/terraform /usr/local/bin/terraform",

        "gcloud config set project $GOOGLE_CLOUD_PROJECT",
        "gcloud config set run/region $GOOGLE_CLOUD_REGION",

        "terraform -chdir=terraform init",
        "terraform -chdir=terraform apply -auto-approve -var project_id=$GOOGLE_CLOUD_PROJECT",
        "npm install",
        "npm run build",
        "cd build/hooks && node prebuild"
      ]
    },
    "postcreate": {
      "commands": ["cd build/hooks && node postcreate"]
    }
  }
}
